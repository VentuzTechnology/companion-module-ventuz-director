{
	"include": ["src/**/*"],
	"compilerOptions": {
		"outDir": "dist",
		"noImplicitAny": false,
		"module": "commonjs", //otherwise you get "Import assignment cannot be used when targeting ECMAScript modules"
		"target": "es2018",
		"moduleResolution": "node",
			"skipLibCheck": true
	},
	"exclude": ["node_modules"]
}
